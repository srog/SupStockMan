{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "classes": true,
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [ "react" ],
  "rules": {
    "indent": [ "error", 4 ],
    "quotes": [ "error", "double" ],
    "semi": [ "error", "always" ],
    "object-curly-spacing": ["error", "always"]
  },
  "globals": {
    "require": true 
  }
}